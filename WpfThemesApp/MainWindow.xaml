<Window x:Class="WpfThemesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfThemesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Style="{DynamicResource styleWindow}">
    <StackPanel Width="300">
        <ComboBox x:Name="listStyles" Style="{DynamicResource styleCombo}" SelectionChanged="listStyles_SelectionChanged"/>
        <TextBox Style="{DynamicResource styleTxtBox}"/>
        <Button Style="{DynamicResource styleButton}">
            Click me
        </Button>
    </StackPanel>
</Window>
